#include<stdio.h>                                                                                          
int main()                                                                                                 
{                                                                                                          
  int c;                                                                                                   
  int count=0;                                                                                             
  c=getchar();                                                                                             
  while(c != '\n')                                                                                         
  {                                                                                                        
    c=getchar();                                                                                           
    count++;                                                                                               
  }                                                                                                        
printf("No. of char :%d\n",count);                                                                           
}  

output :

hello                                                                                                      
No. of char :5
