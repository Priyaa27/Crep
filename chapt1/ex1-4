#include<stdio.h>                                                                                          
int main()                                                                                                 
{                                                                                                          
  float faren,celsius;                                                                                     
  int lower,upper,step;                                                                                    
  lower = 0;                                                                                               
  upper = 300;                                                                                             
  step =20;                                                                                                
  printf(" CONVERSION OF TEMPERATURE \n");                                                                 
  printf("--------------------------------\n");                                                            
  printf("|    CELSIUS    |   FARENHEIT  |\n");                                                            
  printf("--------------------------------\n");                                                            
  celsius = upper;                                                                                         
  while (celsius >= lower)                                                                                 
  {                                                                                                        
    faren =( (9.0/5.0) *celsius)+32;                                                                       
    printf("\t%6.1f\t|\t%3.0f   |\n",celsius,faren);                                                       
    celsius = celsius - step;                                                                              
  }                                                                                                        
 printf("\n--------------------------------\n");                                                           
}                        

OUTPUT :

