#include<stdio.h>                                                                                          
int main()                                                                                                 
{                                                                                                          
  float faren,celsius;                                                                                     
  int lower,upper,step;                                                                                    
  lower = 0;                                                                                               
  upper = 300;                                                                                             
  step = 20;                                                                                               
  printf("\tCONVERSION OF TEMPERATURE\n");                                                                 
  printf("-----------------------------\n");                                                               
  printf("|   FARENHEIT  |  CELSIUS  |\n");                                                                
  printf("-----------------------------\n");                                                               
  while(faren<=upper)                                                                                      
  {                                                                                                        
     celsius = ( (5.0/9.0) + (faren - 32.0) );                                                             
     printf("\t%3.0f\t| %6.1f  |\n", faren,celsius);                                                       
     faren = faren + 20;                                                                                   
  }                                                                                                        
}          
