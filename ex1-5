#include <stdio.h>

int main()
{
   float faren,celsius;                                                                                     
  int lower,upper,step;                                                                                    
  lower = 0;                                                                                               
  upper = 300;                                                                                             
  step = 20;                                                                                               
  printf("  CONVERSION OF TEMPERATURE\n");                                                                 
  printf("-----------------------------\n");                                                               
  printf("|   FARENHEIT  |  CELSIUS  |\n");                                                                
  printf("-----------------------------\n");     
  for(faren=upper; faren >=lower ; faren=faren-step)
  {
     celsius = ( (5.0/9.0) * (faren - 32.0) );                                                             
     printf("\t%3.0f\t| %6.1f  |\n", faren,celsius); 
  }
}



OUTPUT :
 CONVERSION OF TEMPERATURE                                                                     
-----------------------------                                                                   
|   FARENHEIT  |  CELSIUS  |                                                                    
-----------------------------                                                                   
        300     |  148.9  |                                                                     
        280     |  137.8  |                                                                     
        260     |  126.7  |                                                                     
        240     |  115.6  |                                                                     
        220     |  104.4  |                                                                     
        200     |   93.3  |                                                                     
        180     |   82.2  |                                                                     
        160     |   71.1  |                                                                     
        140     |   60.0  |                                                                     
        120     |   48.9  |                                                                     
        100     |   37.8  |                                                                     
         80     |   26.7  |                                                                     
         60     |   15.6  |                                                                     
         40     |    4.4  |                                                                     
         20     |   -6.7  |                                                                     
          0     |  -17.8  |   
